<%- include('./partials/header')%>      

<div class="w-full h-screen flex items-start px-20 py-20">
    <div class="w-[25%] flex h-screen flex-col items-start">
        <div class="flex items-center gap-2">
            <h3>sort by</h3>
            <form action="/shop">
                <select class="border-[1px] px-2 py-1" name="sortby" id="">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        <div class="flex flex-col mt-20">
            <a class="block w-fit mb-2" href="">New Collection</a>
            <a class="block w-fit mb-2" href="">All Products</a>
            <a class="block w-fit mb-2" href="">Discounted Products</a>
        </div>
        <div class="mt-32">
            <a class="block w-fit mb-2" href="">Filter by :</a>
            <a class="block w-fit mb-2" href="">Availability</a>
            <a class="block w-fit mb-2" href="">Discount</a>
        </div>
    </div>

    <main class="w-3/4  p-8 shadow ml-4">
        <h2 class="text-xl text-center font-bold mb-4">Change Profile Photo</h2>
        <div class=" rounded-full w-40 h-40 items-center relative left-80 object-cover" ">
            <img class="w-full h-full border-orange-200 border-2 border-solid rounded-full " src="data:image/jpeg;base64,<%= user.profile.toString('base64') %>" alt="">
        </div>
        <div class="flex justify-center items-center flex-col">
        
        <form autocomplete="off" action="/user/updateMyProfile/<%= profileImage._id%>" method="post" enctype="multipart/form-data">
            <div class="mb-6">
                <div class="flex justify-center">
                    <label for="fileUpload"  class="block text-center text-sm font-medium text-white w-20 bg-green-600 rounded cursor-pointer hover:bg-green-500" >Pofile Image</label>
                    <input name="image" type="file" id="fileUpload" accept="image/*" class="py-2 px-4 rounded hidden" value="<%= profileImage.profile%>" >
                </div>
                
            </div>
            <input class="px-5 py-2 rounded mt-3 bg-blue-500 text-white" type="submit"
                value="Upload Profile Photo">
        </form>
    </div>
    </main>
</div>
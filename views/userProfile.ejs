<%- include('./partials/header')%>      

<div class="w-full h-screen flex items-start px-20 py-20">
    <div class="w-[25%] flex h-screen flex-col items-start">
        <div class="flex items-center gap-2">
            <h3>sort by</h3>
            <form action="/shop">
                <select class="border-[1px] px-2 py-1" name="sortby" id="">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        <div class="flex flex-col mt-20">
            <a class="block w-fit mb-2" href="">New Collection</a>
            <a class="block w-fit mb-2" href="">All Products</a>
            <a class="block w-fit mb-2" href="">Discounted Products</a>
        </div>
        <div class="mt-32">
            <a class="block w-fit mb-2" href="">Filter by :</a>
            <a class="block w-fit mb-2" href="">Availability</a>
            <a class="block w-fit mb-2" href="">Discount</a>
        </div>
    </div>


    <div class="w-[75%] flex flex-col gap-5 h-screen">
        <div class=" flex flex-col items-center justify-center">
            <div class=" rounded-full w-20 h-20 relative -z-10 bg-slate-600 object-cover" >
                <img class="w-full h-full border-orange-200 border-2 border-solid rounded-full " src="data:image/jpeg;base64,<%= user.profile.toString('base64') %>" alt="">
            </div>
                <a class="w-7 h-7 z-30 flex items-center text-center justify-center rounded-full relative -top-4 " href="/user/updateMyProfile/<%=user._id %>">
                    <i class="ri-pencil-line text-black"></i>
                </a>
            
            <h1 class="font-bold  text-lg"> <%= user.name%></h1>
            <h1 class="font-bold mt-2 text-lg"> <%= user.email%></h1>
        
        </div>
            
    </div>
    </div>
</div>
        